<%- include('partials/header'); -%>

<div class="customerlist-page">
    <div class="customerlist-header">
        <h1>Customer List</h1>
    </div>

    <div class="cusomerlist-table-container">

        <table id="customerlisttable">
            <tr class="heading-1">
                <th>Serial No</th>
                <th>Customer Name</th>
                <th>E-mail</th>
                <th>Current Balance</th>
                <th>Details</th>
            </tr>
    
            <% users.forEach( (user) => { %>
                <tr class="heading-2">
                    <form action="/customers/<%= user.customer_id %>" method="POST">
                        <td> <%= user.serial_no %> </td>
                        <td> <%= user.customer_name %> </td>
                        <td> <%= user.customer_email %> </td>
                        <td> â‚¹<%= user.customer_balance %> </td>
                        <td class="transfer-button"> <button type="submit">Customer Details / Transfer</button> </td>
                    </form>
                </tr>
            <%});%>
    
        </table>

    </div>
</div>

